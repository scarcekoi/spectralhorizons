---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import StatsWidget from '~/components/widgets/StatsWidget.astro';

const metadata = {
  title: 'Spectral Horizons',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero>
    <Fragment slot="title">
      Spectral Horizons
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Spectral Horizons</span> is a group of writers, artists, composers, editors, and actors who create original Doctor Who audio dramas of all shapes and sizes!
      </span>
    </Fragment>
  </Hero>

  <!-- HighlightedPosts Widget ******* -->
  <BlogLatestPosts
    title="Find out more in our Blog"
  />

  <!-- StatsWidget (Dynamic Stats) *********** -->
  <StatsWidget />
</Layout>