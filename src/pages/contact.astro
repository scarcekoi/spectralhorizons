    items={[
      {
        title: 'Email',
        description: 'whovianwriters2020@gmail.com',
        icon: 'tabler:mail',
        link: 'mailto:whovianwriters2020@gmail.com',
      },
      {
        title: 'Twitter',
        description: '@SpectralHorizon',
        icon: 'tabler:brand-twitter',
        link: 'https://twitter.com/SpectralHorizon',
      },
      {
        title: 'Bandcamp',
        description: 'https://spectralhorizons.bandcamp.com/',
        icon: 'tabler:brand-bandcamp',
