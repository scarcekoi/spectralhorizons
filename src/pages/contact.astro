---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Where to Reach Us!" />

  <!-- Features2 Widget ************** -->

  <Features2
    items={[
      {
        title: 'Email',
        description: (
          <a href="mailto:whovianwriters2020@gmail.com">whovianwriters2020@gmail.com</a>
        ),
        icon: 'tabler:mail',
      },
      {
        title: 'Twitter',
        description: (
          <a href="https://twitter.com/SpectralHorizon" target="_blank" rel="noopener noreferrer">
            @SpectralHorizon
          </a>
        ),
        icon: 'tabler:brand-twitter',
      },
      {
        title: 'Bandcamp',
        description: (
          <a href="https://spectralhorizons.bandcamp.com/" target="_blank" rel="noopener noreferrer">
            https://spectralhorizons.bandcamp.com/
          </a>
        ),
        icon: 'tabler:brand-bandcamp',
      },
    ]}
  />
</Layout>