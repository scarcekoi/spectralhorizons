---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->
  <HeroText tagline="Contact" title="Where to Reach Us!" />

  <!-- Features2 Widget ************** -->
  <Features2
    items={[
      {
        title: 'Send us an email',
        description: 'whovianwriters2020@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Follow us on Twitter',
        description: '@SpectralHorizon',
        icon: 'tabler:brand-twitter',
      },
      {
        title: 'Visit our Bandcamp',
        description: 'Spectral Horizons',
        icon: 'tabler:brand-bandcamp',
      },
    ]}
  />
</Layout>